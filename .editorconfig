# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation
[{Makefile}]
indent_style = tab
indent_size = 2

# Space indentation
[{*.cs, *.md, .travis.yml, .gitignore, LICENSE}]
indent_style = space
indent_size = 2
